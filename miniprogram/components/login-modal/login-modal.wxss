.login-modal-container {
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.login-modal-container .mask {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
}

.login-modal-container .box {
  position: absolute;
  z-index: 2;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 436rpx;
  padding: 40rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
}

.login-modal-container .box .title {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.login-modal-container .box .title .icon-authing-token {
  margin-right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  font-size: 30rpx;
}

.login-modal-container .box .tips {
  margin-bottom: 64rpx;
  width: 100%;
  text-align: center;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 48rpx;
}

.login-modal-container .box .login-button {
  margin: 0 auto;
  width: 216rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #215AE5;
  font-size: 34rpx;
  font-weight: 500;
  color: #fff;
  border-radius: 8rpx;
}
