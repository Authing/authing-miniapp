.integral-exchanged-card-container {
  margin: 0 auto;
  width: 590rpx;
}

.integral-exchanged-card-container .top-container {
  position: relative;
  margin-bottom: 16rpx;
  width: 100%;
  height: 248rpx;
}

.integral-exchanged-card-container .top-container .integral-card-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 248rpx;
}

.integral-exchanged-card-container .top-container .logo {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 124rpx;
  height: 32rpx;
}

.integral-exchanged-card-container .top-container .label {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 56rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  font-weight: 500;
  color: #4E5969;
  background-color: #fff;
}

.integral-exchanged-card-container .top-container .code-box {
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -32rpx;
  margin-left: -210rpx;
  padding: 12rpx 32rpx;
  box-sizing: border-box;
  width: 430rpx;
  height: 64rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.integral-exchanged-card-container .top-container .code-box .code-content {
  margin-right: 18rpx;
  width: 340rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.integral-exchanged-card-container .top-container .code-box .copy-button {
  width: 32rpx;
  height: 32rpx;
}

.integral-exchanged-card-container .bottom-container .title {
  line-height: 52rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #1D2129;
}

.integral-exchanged-card-container .bottom-container .tips {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #86909C;
}

.integral-exchanged-card-container .bottom-container .tips .separator {
  margin: 0 10rpx;
}
