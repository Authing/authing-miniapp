<view class="integral-index-container">
  <profile
    userInfo="{{ userInfo }}" 
    bindonLogin="onLogin"
    class="profile-container"></profile>

  <view class="integral-card-list center-horizontally-container" wx:if="{{ integralList && integralList.length }}">
    <integral-card-list-brief userInfo="{{ userInfo }}" userIntegrals="{{ userIntegrals }}"></integral-card-list-brief>
    <integral-cross-line></integral-cross-line>

    <view 
      wx:for="{{ integralList }}" 
      wx:for-item="item"
      wx:key="id" 
      class="tabbar-item"
      class="integral-card-item">
      <integral-card-no-exchange 
        integralData="{{ item }}"
        userIntegrals="{{ userIntegrals }}"
        userInfo="{{ userInfo }}"
        bindtoExchange="toExchange">
      </integral-card-no-exchange>  
      <integral-cross-line></integral-cross-line>
    </view>
  </view>

  <tabbar></tabbar>

  <exchange-modal
    isShow="{{ isShowExchangeModal }}" 
    bindclose="onAuthenticatePhone"
    integralData="{{ currentExchangedIntegral }}">
  </exchange-modal>
</view>