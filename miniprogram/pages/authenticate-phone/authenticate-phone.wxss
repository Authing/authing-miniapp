page {
  background-color: #fff;
}

.authenticate-phone-container {
  box-sizing: border-box;
  text-align: center;
}

.authenticate-phone-container .authentication-icon {
  margin-bottom: 32rpx;
  width: 320rpx;
  height: 240rpx;
}

.authenticate-phone-container .title {
  margin-bottom: 40rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: #1D2129;
}

.authenticate-phone-container .user {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #86909C;
  margin-bottom: 80rpx;
}

.authenticate-phone-container .user .photo {
  margin-right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}

.authenticate-phone-container .tips {
  margin: 0 auto;
  padding: 32rpx 32rpx;
  box-sizing: border-box;
  width: 654rpx;
  background-color: #F7F8FA;
  border-radius: 8rpx;
  text-align: left;
}

.authenticate-phone-container .tips .title {
  margin-bottom: 16rpx;
  line-height: 52rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.authenticate-phone-container .tips .item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #86909C;
}

.authenticate-phone-container .tips .item .icon {
  margin-right: 20rpx;
}

.authenticate-phone-container .button {
  margin: 0 auto 32rpx auto;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 654rpx;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 400;
  border-radius: 8rpx;
}

.authenticate-phone-container .button.login-button {
  background-color: #215AE5;
  color: #fff;
}

.authenticate-phone-container .button.cancel-login-button {
  background-color: #F2F3F5;
  color: #1D2129;
}