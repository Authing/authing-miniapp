.mine-container {
  padding-top: 26rpx;
  box-sizing: border-box;
}

.mine-container .profile-container {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.mine-container .no-login-box {
  margin: 0 auto;
  padding: 32rpx 0;
  box-sizing: border-box;
  width: 654rpx;
  height: 288rpx;
  text-align: center;
  background-color: #fff;
  font-size: 28rpx;
  color: #86909C;
}

.mine-container .no-login-box .no-login-icon {
  width: 180rpx;
  height: 180rpx;
}

.mine-container .user-info-block {
  margin: 0 auto 32rpx auto;
  padding: 0 32rpx;
  width: 654rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #86909C;
}

.mine-container .user-info-block .user-info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 96rpx;
  border-bottom: 2rpx solid #F2F3F5;
}

.mine-container .user-info-block .user-info-item .left {
  width: 135rpx;
}

.mine-container .user-info-block .user-info-item .right {
  width: 450rpx;
  text-align: right;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.mine-container .user-info-block.logout {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  font-size: 28rpx;
  color: #E8353E;
}
